{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useNamingConvention": "off"
            }
        }
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf"
    },
    "overrides": [
        {
            "include": ["./library_user_service/**"],
            "linter": {
                "enabled": true,
                "rules": {
                    "all": true
                }
            },
            "formatter": {}
        }
    ],
    "files": {
        "ignore": ["./library_user_service/src/generated/**"]
    }
}
